{
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-react"],
  "rules": {
    "member-access": [true, "no-public"],
    "max-classes-per-file": [true, 2],
    "no-var-requires": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": ["never"],
    "jsx-no-multiline-js": false
  }
}
